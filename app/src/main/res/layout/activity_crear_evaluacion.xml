<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teachapps.gocheck.CrearEvaluacionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textview_nombre"
        android:text="Nombre:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Curso:"
        android:id="@+id/textview_curso"
        android:layout_below="@+id/text_nombre"
        android:layout_alignLeft="@+id/textview_cantidad_formas"
        android:layout_alignStart="@+id/textview_cantidad_formas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Asignatura:"
        android:id="@+id/textview_asignatura"
        android:layout_alignTop="@+id/text_asignatura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_nombre"
        android:text="Ingrese nombre"
        android:layout_alignTop="@+id/textview_nombre"
        android:layout_toRightOf="@+id/textview_exigencia"
        android:layout_toEndOf="@+id/textview_exigencia"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nivel de exigencia:"
        android:id="@+id/textview_exigencia"
        android:layout_below="@+id/text_asignatura"
        android:layout_alignLeft="@+id/textview_curso"
        android:layout_alignStart="@+id/textview_curso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calificación mínima"
        android:id="@+id/textview_calificacion_min"
        android:layout_below="@+id/textview_exigencia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calificación máxima:"
        android:id="@+id/textview_calificacion_max"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textview_calificacion_min"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nota aprobación:"
        android:id="@+id/textview_nota_aprobacion"
        android:layout_below="@+id/textview_calificacion_max"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cantidad de formas:"
        android:id="@+id/textview_cantidad_formas"
        android:layout_below="@+id/textview_nota_aprobacion"
        android:layout_alignRight="@+id/textview_calificacion_max"
        android:layout_alignEnd="@+id/textview_calificacion_max"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_curso"
        android:layout_alignTop="@+id/textview_curso"
        android:layout_alignLeft="@+id/text_nombre"
        android:layout_alignStart="@+id/text_nombre"
        android:text="Ingrese curso" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_exigencia"
        android:layout_alignTop="@+id/textview_exigencia"
        android:layout_alignLeft="@+id/text_curso"
        android:layout_alignStart="@+id/text_curso"
        android:text="10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/text_calificacion_min"
        android:layout_alignTop="@+id/textview_calificacion_min"
        android:layout_alignLeft="@+id/text_exigencia"
        android:layout_alignStart="@+id/text_exigencia"
        android:text="1.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/text_calificacion_max"
        android:layout_alignTop="@+id/textview_calificacion_max"
        android:layout_alignLeft="@+id/text_calificacion_min"
        android:layout_alignStart="@+id/text_calificacion_min"
        android:text="7.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/text_nota_aprobacion"
        android:layout_below="@+id/text_calificacion_max"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/text_calificacion_max"
        android:layout_alignStart="@+id/text_calificacion_max"
        android:text="4.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_cantidad_formas"
        android:layout_alignTop="@+id/textview_cantidad_formas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/text_calificacion_max"
        android:layout_alignStart="@+id/text_calificacion_max"
        android:text="2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_asignatura"
        android:text="Ingrese asignatura"
        android:layout_below="@+id/text_curso"
        android:layout_alignRight="@+id/text_exigencia"
        android:layout_alignEnd="@+id/text_exigencia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/button_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
