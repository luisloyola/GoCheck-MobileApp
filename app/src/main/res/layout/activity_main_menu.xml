<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teachapps.gocheck.MainMenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear evaluaciÃ³n"
        android:id="@+id/button_crear_evaluacion"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/button_crear_pauta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear pauta"
        android:id="@+id/button_crear_pauta"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/button_evaluaciones_creadas"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaluaciones creadas"
        android:id="@+id/button_evaluaciones_creadas"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisar evaluaciones"
        android:id="@+id/button_revisar_evaluaciones"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button_evaluaciones_creadas"
        android:layout_alignLeft="@+id/button_evaluaciones_creadas"
        android:layout_alignStart="@+id/button_evaluaciones_creadas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis cursos"
        android:id="@+id/button_mis_cursos"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_revisar_evaluaciones"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
